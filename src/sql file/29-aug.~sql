--create table CUSTUMERS
create table CUSTUMERS (CNUM_PK NUMBER(8) primary key,CNAME VARCHAR2(100),
CITY VARCHAR2(20),RATING NUMBER(8),SNUM_FK NUMBER (8));
--add

 alter table  CUSTUMERS add c_id number(8);
--DROP
alter table CUSTUMERS drop column(COMM); 

ALTER TABLE CUSTUMERS MODIFY CNUM_PK NUMBER(8) PRIMARY KEY;
--FOREIGN KEY
ALTER TABLE CUSTUMERS MODIFY SNUM_FK NUMBER(8) REFERENCES salespeople (SNUM_PK) ; 

